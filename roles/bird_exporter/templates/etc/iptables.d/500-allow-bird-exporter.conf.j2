# Allow incoming bird_exporter Prometheus connections
{% for allowed_net in prometheus_exporter.allow.ipv4 | default([]) %}
ip4tables -A INPUT -p tcp --dport 9324 -s {{ allowed_net }} -j ACCEPT -m comment --comment "Accept bird_exporter Prometheus"
{% endfor %}
{% for allowed_net in prometheus_exporter.allow.ipv6 | default([]) %}
ip6tables -A INPUT -p tcp --dport 9324 -s {{ allowed_net }} -j ACCEPT -m comment --comment "Accept bird_exporter Prometheus"
{% endfor %}

# Block incoming bird_exporter Prometheus
ip4tables -A INPUT -p tcp --dport 9324 -j DROP -m comment --comment 'Block bird_exporter Prometheus'
ip6tables -A INPUT -p tcp --dport 9324 -j DROP -m comment --comment 'Block bird_exporter Prometheus'
